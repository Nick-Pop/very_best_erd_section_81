<!-- Validation failure messages -->
<% if @dish.errors.any? %>
  <% @dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Dish</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_dish" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for type_of_food -->
      <div class="form-group">
        <label for="type_of_food" class="control-label">
          Type of food
        </label>

        <input type="text" id="type_of_food" name="type_of_food" placeholder="Type of food" class="form-control" value="<%= @dish.type_of_food %>">
      </div>

      <!-- Label and input for restaurant_location -->
      <div class="form-group">
        <label for="restaurant_location" class="control-label">
          Restaurant location
        </label>

        <input type="text" id="restaurant_location" name="restaurant_location" placeholder="Restaurant location" class="form-control" value="<%= @dish.restaurant_location %>">
      </div>

      <!-- Label and input for dish_details -->
      <div class="form-group">
        <label for="dish_details" class="control-label">
          Dish details
        </label>

        <input type="text" id="dish_details" name="dish_details" placeholder="Dish details" class="form-control" value="<%= @dish.dish_details %>">
      </div>

      <!-- Label and input for cuisine_id -->
      <div class="form-group">
        <label for="cuisine_id" class="control-label">
          Cuisine
        </label>

        <input type="text" id="cuisine_id" name="cuisine_id" placeholder="Cuisine" class="form-control" value="<%= @dish.cuisine_id %>">
      </div>

      <button class="btn btn-success">
        Create Dish
      </button>
      or
      <a href="/dishes">Cancel</a>
    </form>
  </div>
</div>
