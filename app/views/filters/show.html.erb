<div class="page-header">
  <h3>Filter #<%= @filter.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Dish</dt>
      <dd><%= @filter.dish_id %></dd>

      <dt>Cuisine</dt>
      <dd><%= @filter.cuisine_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/filters" class="btn btn-primary">
        Back
      </a>
      <a href="/filters/<%= @filter.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_filter/<%= @filter.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
