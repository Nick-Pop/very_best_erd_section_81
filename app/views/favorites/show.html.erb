<div class="page-header">
  <h3>Favorite #<%= @favorite.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Dishes</dt>
      <dd>
        <% if @favorite.dishes.present? %>
          <a href="/dishes/<%= @favorite.dishes_id %>">
            <%= @favorite.dishes.type_of_food %>
          </a>
        <% end %>
      </dd>

      <dt>Venues</dt>
      <dd>
        <% if @favorite.venues.present? %>
          <a href="/venues/<%= @favorite.venues_id %>">
            <%= @favorite.venues.restaurant_name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @favorite.user.present? %>
          <a href="/users/<%= @favorite.user_id %>">
            <%= @favorite.user.user_name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/favorites" class="btn btn-primary">
        Back
      </a>
      <a href="/favorites/<%= @favorite.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_favorite/<%= @favorite.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
